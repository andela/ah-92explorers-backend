    "@babel/register": "^7.4.4",
    "@sendgrid/mail": "^6.4.0",
    "bcrypt": "^3.0.6",
    "bluebird": "^3.5.5",
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
